{
    "name": "hades",
    "version": "1.0.0",
    "description": "Hades is a roleplay framework for FiveM",
    "author": "Left",
    "type": "module",
    "scripts": {
        "start": "cross-env ENVIRONMENT=prod node ./scripts/runner.js --update --start",
        "dev": "cross-env ENVIRONMENT=dev node ./scripts/runner.js --start --dev",
        "update": "node ./scripts/runner.js --update",
        "docs": "node ./scripts/runner.js --docs"
    },
    "dependencies": {
        "@vitejs/plugin-vue": "^4.5.2",
        "axios": "^1.6.2"
    },
    "devDependencies": {
        "@citizenfx/client": "2.0.7114-1",
        "@citizenfx/server": "2.0.7114-1",
        "@types/decompress": "^4.2.7",
        "@types/node": "^20.9.2",
        "cross-env": "^7.0.3",
        "esbuild": "0.19.9",
        "fkill": "^8.1.1",
        "glob": "^10.3.10",
        "node-stream-zip": "^1.15.0",
        "prettier": "^3.1.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.7",
        "vue": "^3.3.11"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "semi": true,
        "arrowParens": "always",
        "trailingComma": "all"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
